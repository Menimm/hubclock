[Unit]
Description=HubClock Backend (Production)
After=network.target mysql.service mariadb.service

[Service]
Type=simple
WorkingDirectory={{PROJECT_ROOT}}
Environment="PYTHONPATH={{PROJECT_ROOT}}/backend"
Environment="HUBCLOCK_ENV=production"
ExecStart={{PROJECT_ROOT}}/backend/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 4 --proxy-headers --forwarded-allow-ips='*'
Restart=always
RestartSec=5
User={{USER}}

[Install]
WantedBy=multi-user.target
